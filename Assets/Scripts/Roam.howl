⊐ Active.Core; ⊐̥ Active.Core.status;
⊐ UnityEngine;
⊐ Activ.Kabuki; ⊐̥ Activ.Kabuki.VectorExt;

‒ ○ Roam : Actor{

    ‒ ㅇ anchored = ✓;
    ‒ シ origin   = シ.zero;
    ‒ エ giz;

    シ? target;

    ┈ Start ⎚ loco = ⌢ Locomotion();

    ⁺‒ ⑂ Step() → (target.HasValue)
    ? (Eat(target) ∨ ⦿["Flail"]) ∧ Do( target = ∅ )
    : Do( target = giz˙ = RandomX_Z(15f) + (anchored ? origin : ⦿˙));

    ⑂ Eat(シ? target) →  Reach(target) ∧ ⦿["Eat"];

}
