‒ ○ Roam : Actor{

    ‒ ㅇ anchored = ✓;
    ‒ シ origin   = シ.zero;
    ‒ エ giz;

    シ? target;

    ┈ Start ⎚ loco = ⌢ Locomotion();

    ⁺‒ ⑂ Step() → (Reach(target) ∨ ⦿["Flail"]) ∧ Retarget();

    ▷ Retarget()
    { target = giz˙ = RandomX_Z(15f) + (anchored ? origin : ⦿˙); ⌽ }

    //⑂ Eat(シ? target) → Reach(target) ∧ ⦿["Eat"];

}
