⊐ Active.Core; ⊐̥ Active.Core.status;
⊐ UnityEngine;
⊐ Activ.Kabuki; ⊐̥ Activ.Kabuki.VectorExt;

‒ ○ Roam : Actor{

    ‒ ㅇ anchored = ✓;
    ‒ シ origin   = シ.zero;
    ‒ エ giz;

    シ? target;

    ┈ Start ⎚ loco = ⌢ Locomotion();

    ⁺‒ ⑂ Step() → (Eat() ∨ ⦿["Flail"]) ∧ Retarget();

    ⑂ Eat() → (◍ ≠ ∅) ? Reach(◍) ∧ ⦿["*Munch*"] : ◇;

    ▷ Retarget()
    → Do( ◍ = giz˙ = RandomX_Z(15f) + (anchored ? origin : ⦿˙) );

}
