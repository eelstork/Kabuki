    // --------------------------------------------------------------

    ⏚ Gesture(){
        ∙ x = CreateEmpty( シ.⊢ * 2f );
        ⟾ Complete( ⎚ actor["Greet", x], 6f);
        o( actor.み.Look(x) < 1f);
    }

    ⏚ Give_accept(){
    ⒪
        ∙ ball  = Ball(0.2f, parent: actor.み);
        ∙ other = Other("Mimi");
        ⟾ Complete(
            ⎚ (actor.Give(ball, other) ∧ other.Has(ball))
               % other.Take(), 10f);
    }

    ⏚ Give_ignore(){
        ∙ ball = Ball(0.2f, parent: actor.み);
        ∙ other = Other();
        ⟾ Run( ⎚ actor.Give(ball, other), 5f);
