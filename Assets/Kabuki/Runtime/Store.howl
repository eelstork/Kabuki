⊐ UnityEngine;
⊐ Active.Core; ⊐̥ Active.Status;

⊓ Kabuki{
[System.Serializable]
‒ ○ Store{

    ‒ ㅇ want;
    ‒ ㅅ amount = 1f, cap = 1f, usage = -0.1f, fill = 1f;

    ‒ ⑂ Feed(){
        amount += fill ᐧ 𝛿𝚝 ;
        ⤴ (amount > cap){
            amount = cap; want = ✗; ◇̠
        } ⤵ ☡̱
    }

    ‒ ┈ Update(ㅅ δ=0f){
        amount += usage ᐧ 𝛿𝚝 + δ;
        ⤴ (amount <  0f) { amount =  0f; want = ✓; }
        ⤳ (amount > cap) { amount = cap; want = ✗; }
    }

    ⒤ Store(ㅅ ⧕) → ⌢ Store(){ amount = ⧕ };

    ⒤ ㅅ(Store ⧕) → ⧕.amount;

    //‒̥ ㅇ ⨕ > (Store x, ㅅ y) → x.amount > y;
    //‒̥ ㅇ ⨕ < (Store x, ㅅ y) → x.amount < y;

}}
